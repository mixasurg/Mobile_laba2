<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/miniatureImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Miniature Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/itemFaction"
        android:layout_width="187dp"
        android:layout_height="24dp"
        android:text="Faction"
        app:layout_constraintEnd_toStartOf="@id/deleteIcon"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="@id/itemTitle"
        app:layout_constraintTop_toBottomOf="@id/itemTitle" />

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="189dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:text="Miniature Name"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/deleteIcon"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toEndOf="@id/miniatureImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/miniatureFactionImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="264dp"
        android:contentDescription="Miniature Faction Image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/deleteIcon"
        android:layout_width="57dp"
        android:layout_height="64dp"
        android:contentDescription="Delete Icon"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
